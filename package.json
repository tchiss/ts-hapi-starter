{
  "name": "ts-hapi-starter",
  "version": "0.0.1",
  "description": "Typescript && Hapi app starter to build some APIs",
  "main": "dis/Server.js",
  "scripts": {
    "build": "tsc && typedoc --out docs --target es6 --theme minimal --mode file src",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "test": "npm run lint && jest --coverage",
    "start": "node --experimental-modules dist/Server.js",
    "prebuild": "rimraf dist"
  },
  "author": "Nestor TCHISSAMBOT MAKOSSO",
  "license": "ISC",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testPathIgnorePatterns": [],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/hapi__hapi": "^19.0.2",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.2",
    "@types/sinon": "^7.5.2",
    "colors": "^1.4.0",
    "coveralls": "^3.0.11",
    "cross-env": "^7.0.2",
    "jest": "^25.1.0",
    "jest-config": "^25.1.0",
    "lint-staged": "^10.0.8",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "tslint": "^6.1.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.17.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.0.0",
    "dotenv": "^8.2.0",
    "sinon": "^9.0.1",
    "winston": "^3.2.1"
  }
}
